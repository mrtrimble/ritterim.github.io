---
import { site } from '../data/config.json';
---

<footer class="container">
  <div class="footer-divider">
    <a href={site.url}>
      <img src="/images/logos/RIMdev.svg" alt={site.user_description} />
    </a>
  </div>
  <div class="block-container flex--justify-between">
    <p class="flex flex--align-center">
      <span class="mt-1">&copy;</span>
      <a class="mx-2 mt-1" href={site.rim_url}>{site.rim_copy}</a>
      <a target="_blank" href={site.map_url}>
        <span class="sr-only">Our Location</span>
        <i class="pi-map-marker"></i>
      </a>
    </p>

    <div class="flex">
      <div class="item mr-2">
        <a
          target="_blank"
          href={`https://twitter.com/${site.twitter_username}`}
        >
          Twitter
        </a>
      </div>
      <div class="item mr-2">
        <a target="_blank" href={`https://github.com/${site.github_username}`}>
          GitHub
        </a>
      </div>
      <div class="item">
        <a href="/feed.xml">RSS Feed</a>
      </div>
    </div>
  </div>
</footer>

<script
  is:inline
  src="https://unpkg.com/@ritterim/platform-ui/dist/js/platform-ui.min.js"
  defer
></script>
